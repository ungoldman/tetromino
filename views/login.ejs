<div class="row">
  <div class="span3">
    <form id="login" method="POST" action="/login" class="well">
      <div class="control-group">
        <div class="controls">
          <input type="text" name="username" placeholder="Username">
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <input type="password" name="password" placeholder="Password">
        </div>
      </div>
      <button type="submit" class="btn btn-inverse btn-block">Login</button>
    </form>
  </div>

  <div class="offset2 span3">
    <form id="register" method="POST" action="/register" class="well">
      <div class="control-group">
        <div class="controls">
          <input type="email" name="email" placeholder="Email">
        </div>
      </div>
      <input type="text" name="username" placeholder="Username">
      <div class="control-group">
        <div class="controls">
          <input type="password" name="password" placeholder="Password">
        </div>
      </div>
      <button type="submit" class="btn btn-inverse btn-block">Register</button>
    </form>
  </div>
</div>
